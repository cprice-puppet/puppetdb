#!/bin/sh

set -e

if [ "$1" = "configure" ]; then

<% if @pe -%>
    chown -R pe-puppet:pe-puppet <%= @plibdir -%>/puppet
    chown -R pe-puppet:pe-puppet <%= @terminus_lib_dir -%>
<% else -%>
    chown -R puppet:puppet <%= @plibdir -%>/puppet
    chown -R puppet:puppet <%= @terminus_lib_dir -%>
<% end -%>

fi

